  "license": "MIT",
  "dependencies": {
    "@dicebear/collection": "^9.0.1",
    "@dicebear/core": "^9.0.1",
    "@fastify/compress": "^7.0.3",
    "@fastify/cors": "^9.0.1",
    "@trpc/server": "^10.45.2",
    "fastify": "^4.28.1",
    "kysely": "^0.27.4",
    "pg": "^8.12.0",
    "superjson": "^2.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@heropad/eslint-config": "workspace:*",
    "@heropad/tsconfig": "workspace:*",
    "@snaplet/copycat": "^5.0.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/pg": "^8.11.6",
    "graphology": "0.25.4",
    "graphology-generators": "^0.11.2",
