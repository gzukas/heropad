{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "@heropad/api#build": {
      "env": [
        "HEROPAD_*"
      ]
    },
    "@heropad/web#build": {
      "env": [
        "VITE_*",
        "DEV"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "test": {}
  }
}