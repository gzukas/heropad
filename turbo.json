{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "HEROPAD_DB_URL",
    "HEROPAD_CORS_ORIGIN",
    "HEROPAD_HOST",
    "HEROPAD_PORT",
    "HEROPAD_PQIDS_SALT"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "test": {}
  }
}