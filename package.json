{
  "name": "heropad",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "dotenv -- turbo run build",
    "dev": "dotenv -- turbo run dev --parallel",
    "lint": "dotenv -- turbo run lint",
    "format": "prettier --write \"\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "dotenv-cli": "^7.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "3.0.0",
    "turbo": "latest",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "overrides": {
    "@vitejs/plugin-react-swc": {
      "@swc/core": "1.3.62"
    }
  }
}
