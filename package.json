{
  "name": "heropad",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "3.1.1",
    "turbo": "latest",
    "typescript": "^5.3.3"
  },
  "overrides": {
    "@react-sigma/core": {
      "sigma": "3.0.0-alpha3"
    },
    "@lingui/vite-plugin": {
      "vite": "3 - 5"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
